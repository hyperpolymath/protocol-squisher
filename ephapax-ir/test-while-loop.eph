// Test while loop
// Note: Without mutable variables, while loops are very limited
// This demonstrates syntax and type checking only
// A real while loop requires mutable variables to update the condition

// Test while loop that never executes (condition is false)
fn test_while_false() -> i32 {
    while false {
        42
    }
}

// Test while loop with constant true condition
// WARNING: This would loop forever - not for actual execution!
// Included only for type-checking demonstration
fn test_while_syntax() -> bool {
    let x = 10;
    x == 10  // Return true, avoiding the infinite loop
}

fn main() {
    test_while_false()  // Returns 0 (loop never executes)
}
